// Zed keymap in the style of VSpaceCode
// Store in ~/AppData/Roaming/Zed/keymap.json for windows
// Store in ~/.config/zed/keymap.json for linux/mac
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "ctrl-0": "project_panel::ToggleFocus",
    },
  },
  // use ctrl-(number) to cycle through menus
  {
    "context": "Workspace || Terminal",
    "bindings": {
      "ctrl-1": ["workspace::ActivatePane", 0],
      "ctrl-2": "outline_panel::ToggleFocus",
      "ctrl-3": "git_panel::ToggleFocus",
    },
  },
  // create new file in same directory as active file
  {
    "context": "Editor && vim_mode == normal && !ProjectPanel",
    "bindings": {
      "space f n": ["workspace::SendKeystrokes", "space p t %"],
    },
  },
  // control windows with ctrl-w even when using the terminal
  {
    "context": "VimControl && !menu || !Editor && Terminal",
    "bindings": {
      // window related commands (ctrl-w X)
      "ctrl-w": null,
      "ctrl-w left": "workspace::ActivatePaneLeft",
      "ctrl-w right": "workspace::ActivatePaneRight",
      "ctrl-w up": "workspace::ActivatePaneUp",
      "ctrl-w down": "workspace::ActivatePaneDown",
      "ctrl-w ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-w ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-w ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-w ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown",
      "ctrl-w shift-left": "workspace::SwapPaneLeft",
      "ctrl-w shift-right": "workspace::SwapPaneRight",
      "ctrl-w shift-up": "workspace::SwapPaneUp",
      "ctrl-w shift-down": "workspace::SwapPaneDown",
      "ctrl-w x": "workspace::SwapPaneAdjacent",
      "ctrl-w ctrl-x": "workspace::SwapPaneAdjacent",
      "ctrl-w shift-h": "workspace::MovePaneLeft",
      "ctrl-w shift-l": "workspace::MovePaneRight",
      "ctrl-w shift-k": "workspace::MovePaneUp",
      "ctrl-w shift-j": "workspace::MovePaneDown",
      "ctrl-w >": "vim::ResizePaneRight",
      "ctrl-w <": "vim::ResizePaneLeft",
      "ctrl-w -": "vim::ResizePaneDown",
      "ctrl-w +": "vim::ResizePaneUp",
      "ctrl-w _": "vim::MaximizePane",
      "ctrl-w =": "vim::ResetPaneSizes",
      "ctrl-w g t": "pane::ActivateNextItem",
      "ctrl-w ctrl-g t": "pane::ActivateNextItem",
      "ctrl-w g shift-t": "pane::ActivatePreviousItem",
      "ctrl-w ctrl-g shift-t": "pane::ActivatePreviousItem",
      "ctrl-w w": "workspace::ActivateNextPane",
      "ctrl-w ctrl-w": "workspace::ActivateNextPane",
      "ctrl-w p": "workspace::ActivatePreviousPane",
      "ctrl-w ctrl-p": "workspace::ActivatePreviousPane",
      "ctrl-w shift-w": "workspace::ActivatePreviousPane",
      "ctrl-w ctrl-shift-w": "workspace::ActivatePreviousPane",
      "ctrl-w ctrl-v": "pane::SplitVertical",
      "ctrl-w v": "pane::SplitVertical",
      "ctrl-w shift-s": "pane::SplitHorizontal",
      "ctrl-w ctrl-s": "pane::SplitHorizontal",
      "ctrl-w s": "pane::SplitHorizontal",
      "ctrl-w ctrl-c": "pane::CloseActiveItem",
      "ctrl-w c": "pane::CloseActiveItem",
      "ctrl-w ctrl-q": "pane::CloseActiveItem",
      "ctrl-w q": "pane::CloseActiveItem",
      "ctrl-w ctrl-a": "pane::CloseAllItems",
      "ctrl-w a": "pane::CloseAllItems",
      "ctrl-w ctrl-o": "workspace::CloseInactiveTabsAndPanes",
      "ctrl-w o": "workspace::CloseInactiveTabsAndPanes",
      "ctrl-w ctrl-n": "workspace::NewFileSplitHorizontal",
      "ctrl-w n": "workspace::NewFileSplitHorizontal",
      "g t": "vim::GoToTab",
      "g shift-t": "vim::GoToPreviousTab",
    },
  },
  // disable vim motions that are never used / put back to default
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-e": "file_finder::Toggle",
      "ctrl-y": "editor::Redo",
      "ctrl-b": "workspace::ToggleLeftDock",
    },
  },
  // close the search when it's empty
  {
    "context": "VimControl && !menu || Editor && !Terminal",
    "bindings": {
      "ctrl-w c": "pane::CloseActiveItem",
    },
  },
  // ctrl-w c to close the left bar
  {
    "context": "Workspace && !Editor",
    "bindings": {
      "ctrl-w c": "pane::CloseActiveItem",
    },
  },
  // space f t to toggle left file tree (different from space p t)
  {
    "context": "vim_mode == normal && left_dock == ProjectPanel",
    "bindings": {
      "space f t": "workspace::ToggleLeftDock",
    },
  },
  {
    "context": "vim_mode == normal && left_dock != ProjectPanel",
    "bindings": {
      "space f t": "workspace::ToggleLeftDock",
    },
  },
  // end space f t toggle
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // ---------------------------------------------------------
      // Base / Root Shortcuts
      // ---------------------------------------------------------
      "space space": "command_palette::Toggle",
      "space tab": "pane::ActivatePreviousItem",
      "space '": "terminal_panel::Toggle",
      "space !": "terminal_panel::Toggle",
      "space /": "pane::DeploySearch",
      "space *": "pane::DeploySearch",
      "space ?": "keymap_editor::ToggleKeystrokeSearch",
      "space ;": ["editor::ToggleComments", { "advance_downwards": false }],
      "space 0": "project_panel::ToggleFocus",

      // ---------------------------------------------------------
      // b: Buffers / Tabs
      // ---------------------------------------------------------
      "space b b": "tab_switcher::ToggleAll",
      "space b d": "pane::CloseActiveItem",
      "space b n": "pane::ActivateNextItem",
      "space b p": "pane::ActivatePreviousItem",
      "space b s": "workspace::NewFile",
      "space b u": "pane::ReopenClosedItem",
      "space b t": "pane::TogglePinTab",
      "space b M": ["pane::CloseOtherItems", { "close_pinned": false }],
      "space b Y": "editor::CopyPath",
      "H": "pane::ActivatePreviousItem",
      "L": "pane::ActivateNextItem",
      // ---------------------------------------------------------
      // e: Errors / Diagnostics
      // ---------------------------------------------------------
      "space e e": "editor::Hover",
      "space e l": "diagnostics::Deploy",
      "space e n": "editor::GoToDiagnostic",
      "space e p": "editor::GoToPreviousDiagnostic",
      "space e N": "editor::GoToPreviousDiagnostic",
      "space e f": "editor::ToggleCodeActions",

      // ---------------------------------------------------------
      // f: Files
      // ---------------------------------------------------------
      "space f f": "file_finder::Toggle",
      "space f r": "file_finder::Toggle",
      "space f s": "workspace::Save",
      "space f S": "workspace::SaveAll",
      "space f e d": "zed::OpenSettings",
      "space f e k": "zed::OpenKeymap",
      "space f e D": "zed::OpenSettingsFile",
      "space f e K": "zed::OpenKeymapFile",
      "space f D": "project_panel::Delete",
      "space f R": "project_panel::Rename",

      // ---------------------------------------------------------
      // g: Git
      // ---------------------------------------------------------
      "space g s": "git_panel::ToggleFocus",
      "space g b": "editor::ToggleGitBlameInline",
      "space g d": "git::Diff",
      "space g c": "git::Clone",

      // ---------------------------------------------------------
      // j: Jump / Join / Split
      // ---------------------------------------------------------
      "space j i": "outline::Toggle",
      "space j J": "project_symbols::Toggle",
      "space j c": "editor::GoToNextChange",
      "space j C": "editor::GoToPreviousChange",
      "space j =": "editor::Format",
      "space j n": "editor::JoinLines",

      // ---------------------------------------------------------
      // p: Project
      // ---------------------------------------------------------
      "space p p": "projects::OpenRecent",
      "space p l": "projects::OpenRecent",
      "space p f": "file_finder::Toggle",
      "space p t": "project_panel::ToggleFocus",
      "space p R": "pane::DeploySearch",

      // ---------------------------------------------------------
      // q: Quit / Frame
      // ---------------------------------------------------------
      "space q q": "workspace::CloseWindow",
      "space q f": "workspace::CloseWindow",
      "space q Q": "zed::Quit",

      // ---------------------------------------------------------
      // s: Search / Symbol
      // ---------------------------------------------------------
      "space s p": "pane::DeploySearch",
      "space s s": "buffer_search::Deploy",
      "space s r": "editor::FindAllReferences",
      "space s e": "editor::Rename",
      "space s J": "project_symbols::Toggle",
      "space s j": "outline::Toggle",

      // ---------------------------------------------------------
      // t: Toggles
      // ---------------------------------------------------------
      "space t l": "editor::ToggleSoftWrap",
      "space t c": "search::ToggleCaseSensitive",

      // ---------------------------------------------------------
      // T: Show
      // ---------------------------------------------------------
      "space T b": "workspace::ToggleLeftDock",
      "space T j": "workspace::ToggleBottomDock",

      // ---------------------------------------------------------
      // w: Window / Panes
      // ---------------------------------------------------------
      "space w /": "pane::SplitRight",
      "space w v": "pane::SplitRight",
      "space w -": "pane::SplitDown",
      "space w s": "pane::SplitDown",
      "space w h": "workspace::ActivatePaneLeft",
      "space w j": "workspace::ActivatePaneDown",
      "space w k": "workspace::ActivatePaneUp",
      "space w l": "workspace::ActivatePaneRight",
      "space w w": "workspace::ActivateNextPane",
      "space w W": "workspace::ActivatePreviousPane",
      "space w d": "pane::CloseActiveItem",
      "space w x": "workspace::CloseAllItemsAndPanes",
      "space w H": "workspace::SwapPaneLeft",
      "space w J": "workspace::SwapPaneDown",
      "space w K": "workspace::SwapPaneUp",
      "space w L": "workspace::SwapPaneRight",
      "space w =": "workspace::ResetOpenDocksSize",
    },
  },
  {
    // Apply visual-specific VSpaceCode selections
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "space j =": "editor::FormatSelections",
      "space /": [
        "buffer_search::Deploy",
        { "selection_search_enabled": true },
      ],
    },
  },
  {
    // Close out of left bar when focused
    "context": "ProjectPanel || GitPanel",
    "bindings": {
      "ctrl-w c": "workspace::ToggleLeftDock",
    },
  },
  {
    // Add file tree toggles to the Project Panel context
    "context": "ProjectPanel",
    "bindings": {
      "space p t": "project_panel::ToggleFocus",
      "space f n": "project_panel::NewFile",
    },
  },
  {
    // Applies to menus like right-click context menus
    "context": "menu",
    "bindings": {
      "ctrl-k": "menu::SelectPrevious",
      "ctrl-j": "menu::SelectNext",
    },
  },
  {
    // Applies to the Command Palette, File Finder, etc.
    "context": "Picker",
    "bindings": {
      "ctrl-k": "menu::SelectPrevious",
      "ctrl-j": "menu::SelectNext",
    },
  },
  // Remap all ctrl-w to ctrl-f4
  // Just null ctrl-w since ctrl-f4 already does the same by default
  {
    "context": "RulesLibrary",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-w": null,
    },
  },
  {
    "context": "Pane",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-w": null,
    },
  },
  {
    "context": "SettingsWindow",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-w": null,
    },
  },
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-w": null,
    },
  },
  // Done unmapping ctrl-w
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
]
